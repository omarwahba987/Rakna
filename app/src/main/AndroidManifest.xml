<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.omar.rakna">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen"></activity>
        <activity android:name=".RegisterPages.AddGarage" />
        <activity android:name=".GarageList">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Root" />
        <activity android:name=".Login" />
        <activity android:name=".HomePages.UserHome" />
        <activity android:name=".HomePages.SuperVisiorHome" />
        <activity android:name=".HomePages.AdminHome" />
        <activity android:name=".RegisterPages.UserRegister" />
        <activity android:name=".RegisterPages.AdminRegister" />
        <activity android:name=".RegisterPages.SuperVisorRegister" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/ApiKey" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>